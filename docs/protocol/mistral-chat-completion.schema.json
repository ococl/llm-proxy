{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.mistral.ai/api-reference/chat-completion",
  "title": "Mistral Chat Completion API Schema",
  "description": "Mistral AI Chat Completion API 的请求和响应 JSON Schema 定义",
  "type": "object",
  
  "definitions": {
    "message_role": {
      "type": "string",
      "enum": ["system", "user", "assistant", "tool"],
      "description": "消息的角色类型"
    },
    
    "message_content": {
      "oneOf": [
        {
          "type": "string",
          "description": "简单的文本内容"
        },
        {
          "type": "array",
          "description": "多模态内容块",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["text", "image_url"],
                "description": "内容块类型"
              },
              "text": {
                "type": "string"
              },
              "image_url": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string",
                    "format": "uri"
                  }
                },
                "required": ["url"]
              }
            },
            "required": ["type"]
          }
        }
      ]
    },
    
    "message": {
      "type": "object",
      "properties": {
        "role": {
          "$ref": "#/definitions/message_role"
        },
        "content": {
          "$ref": "#/definitions/message_content"
        },
        "tool_calls": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": ["function"]
              },
              "function": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "arguments": {
                    "type": "string"
                  }
                },
                "required": ["name"]
              }
            },
            "required": ["id", "type", "function"]
          }
        },
        "tool_call_id": {
          "type": "string"
        }
      },
      "required": ["role", "content"]
    },
    
    "response_message": {
      "type": "object",
      "properties": {
        "role": {
          "$ref": "#/definitions/message_role"
        },
        "content": {
          "type": ["string", "null"]
        },
        "tool_calls": {
          "type": "array"
        }
      },
      "required": ["role"]
    },
    
    "choice": {
      "type": "object",
      "properties": {
        "index": {
          "type": "integer"
        },
        "message": {
          "$ref": "#/definitions/response_message"
        },
        "finish_reason": {
          "type": "string",
          "enum": ["stop", "length", "tool_calls", "content_filter", "function_call"],
          "description": "完成原因"
        },
        "logprobs": {
          "type": ["object", "null"]
        }
      },
      "required": ["index", "message", "finish_reason"]
    },
    
    "usage": {
      "type": "object",
      "description": "Mistral usage 字段",
      "properties": {
        "prompt_tokens": {
          "type": "integer"
        },
        "completion_tokens": {
          "type": "integer"
        },
        "total_tokens": {
          "type": "integer"
        }
      },
      "required": ["prompt_tokens", "completion_tokens", "total_tokens"]
    },
    
    "stream_choice": {
      "type": "object",
      "properties": {
        "index": {
          "type": "integer"
        },
        "delta": {
          "type": "object",
          "properties": {
            "role": {
              "$ref": "#/definitions/message_role"
            },
            "content": {
              "type": ["string", "null"]
            },
            "tool_calls": {
              "type": "array"
            }
          }
        },
        "logprobs": {
          "type": ["object", "null"]
        },
        "finish_reason": {
          "type": ["string", "null"]
        }
      },
      "required": ["index"]
    },
    
    "tool_calls_parallel_mode": {
      "type": "string",
      "enum": ["auto", "any", "none"],
      "description": "并行工具调用模式"
    },
    
    "json_schema": {
      "type": "object",
      "description": "JSON Schema 配置",
      "properties": {
        "name": {
          "type": "string",
          "description": "JSON Schema 名称"
        },
        "description": {
          "type": "string",
          "description": "描述"
        },
        "strict": {
          "type": "boolean",
          "description": "是否严格遵循"
        },
        "schema": {
          "type": "object",
          "description": "JSON Schema 定义"
        }
      },
      "required": ["name", "schema"]
    },
    
    "prediction": {
      "type": "object",
      "description": "预测输出配置",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["content"]
        },
        "content": {
          "type": "string"
        }
      }
    },
    
    "prompt_mode": {
      "type": "string",
      "enum": ["jinja", "plain_text"],
      "description": "提示词模式"
    }
  },
  
  "properties": {
    "request": {
      "type": "object",
      "description": "Mistral Chat Completion API 请求",
      "properties": {
        "model": {
          "type": "string",
          "description": "要使用的模型 ID，如 mistral-small-latest、mistral-medium-latest、mistral-large-latest 等"
        },
        "messages": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/message"
          }
        },
        "frequency_penalty": {
          "type": "number",
          "minimum": -2.0,
          "maximum": 2.0,
          "default": 0
        },
        "logit_bias": {
          "type": "object"
        },
        "logprobs": {
          "type": "boolean",
          "default": false
        },
        "max_tokens": {
          "type": "integer"
        },
        "min_tokens": {
          "type": "integer",
          "description": "最小生成 token 数"
        },
        "n": {
          "type": "integer",
          "minimum": 1,
          "default": 1
        },
        "presence_penalty": {
          "type": "number",
          "minimum": -2.0,
          "maximum": 2.0,
          "default": 0
        },
        "response_format": {
          "type": "object",
          "description": "响应格式控制",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["text", "json_object", "json_schema"]
            },
            "json_schema": {
              "$ref": "#/definitions/json_schema"
            }
          }
        },
        "safe_prompt": {
          "type": "boolean",
          "default": false,
          "description": "安全提示模式"
        },
        "seed": {
          "type": "integer",
          "description": "随机种子"
        },
        "stop": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "stream": {
          "type": "boolean",
          "default": false
        },
        "stream_options": {
          "type": "object",
          "properties": {
            "include_usage": {
              "type": "boolean"
            }
          }
        },
        "temperature": {
          "type": "number",
          "minimum": 0,
          "maximum": 2,
          "default": 0.7
        },
        "tool_choice": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["auto", "any", "none", "required"]
            },
            {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["function"]
                },
                "function": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          ]
        },
        "tools": {
          "type": "array",
          "description": "可用工具列表",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["function"]
              },
              "function": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "parameters": {
                    "type": "object"
                  }
                },
                "required": ["name"]
              }
            },
            "required": ["type", "function"]
          }
        },
        "top_p": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 1
        },
        "top_k": {
          "type": "integer",
          "minimum": 0,
          "description": "Top-K 采样参数"
        },
        "tool_prompt_mesages": {
          "type": "array",
          "description": "工具提示消息"
        },
        "parallel_tool_calls": {
          "$ref": "#/definitions/tool_calls_parallel_mode",
          "description": "并行工具调用模式"
        },
        "prediction": {
          "$ref": "#/definitions/prediction",
          "description": "预测输出配置"
        },
        "prompt_mode": {
          "$ref": "#/definitions/prompt_mode",
          "description": "提示词模式"
        }
      },
      "required": ["model", "messages"]
    },
    
    "response": {
      "type": "object",
      "description": "Mistral Chat Completion API 非流式响应",
      "properties": {
        "id": {
          "type": "string"
        },
        "object": {
          "type": "string",
          "enum": ["chat.completion"]
        },
        "created": {
          "type": "integer"
        },
        "model": {
          "type": "string"
        },
        "choices": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/choice"
          }
        },
        "usage": {
          "$ref": "#/definitions/usage"
        }
      },
      "required": ["id", "object", "created", "model", "choices"]
    },
    
    "stream_response": {
      "type": "object",
      "description": "Mistral Chat Completion API 流式响应（单个 chunk）",
      "properties": {
        "id": {
          "type": "string"
        },
        "object": {
          "type": "string",
          "enum": ["chat.completion.chunk"]
        },
        "created": {
          "type": "integer"
        },
        "model": {
          "type": "string"
        },
        "choices": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/stream_choice"
          }
        },
        "usage": {
          "$ref": "#/definitions/usage"
        }
      }
    }
  }
}
